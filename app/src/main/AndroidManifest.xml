<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.webianks.anotech">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AnotechApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".screens.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".screens.ResultsActivity"
            android:label="" />

        <activity
            android:name=".test_classes.ProductPriceZeroAnomaly"
            android:label="@string/product_price_zero" />

        <activity
            android:name=".test_classes.CreditCardFraud"
            android:label="@string/credit_card_fraud" />

        <activity
            android:name=".test_classes.AdditionalServer"
            android:label="@string/additional_server" />

        <activity
            android:name=".test_classes.MemoryRequirement"
            android:label="@string/memory_requirement" />

    </application>

</manifest>